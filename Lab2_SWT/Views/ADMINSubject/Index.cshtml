@model IEnumerable<LMMProject.Models.Subject>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/learning-part.css">
</head>
<body>
    <div class="curri-details">
    <div class="subject">
        <div class="navbar">
            <img src="~/image/istockphoto-1138089745-170667a.jpg" class="logo">
            <ul>
                <li><a asp-controller="ADMIN" asp-action="Dashboard">Home</a></li>
                <li><a asp-action="Create">Create New</a></li>
            </ul>
        </div>
        <div class="content">
            <b>
                <h1>Learning Materials Management</h1>
                <p>Subject List</p>
            </b>
        </div>
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectNameVn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubjectNameEn)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.PreRequisite)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectNameVn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubjectNameEn)
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.PreRequisite)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.StatusName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.SubjectCode" class="btn btn-primary">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.SubjectCode" class="btn btn-primary">Delete</a> |
                            <a asp-controller="ADMINSession" asp-action="Index" asp-route-id="@item.SubjectCode" class="btn btn-primary">Session</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        </div>
    </div>

</body>
</html>
